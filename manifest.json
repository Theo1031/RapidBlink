{
    "manifest_version": 2,
    "name": "SwiftBlink Chrome",
    "version": "1.0",
    "description": "A Chrome extension with Spritz-like functionality.",
    "permissions": ["storage", "activeTab", "contextMenus", "webNavigation", "alarms"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "options_page": "options.html",
    "web_accessible_resources": ["content.js"]
}